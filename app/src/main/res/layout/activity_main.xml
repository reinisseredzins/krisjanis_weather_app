<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.pc.weatherapplication.MainActivity">

        <android.support.v7.widget.Toolbar
            android:id="@+id/my_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

        <android.support.design.widget.TabLayout
            android:id="@+id/tab_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/my_toolbar"
            android:background="?attr/colorPrimary"
            android:elevation="4dp"
            android:minHeight="?attr/actionBarSize"
            android:theme="@style/ThemeOverlay.AppCompat.Light" />

        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/tab_layout" />
    </RelativeLayout>


    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true">


            <LinearLayout
                android:id="@+id/nav_layout_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="top">

            <TextView
                android:id="@+id/menu_current_location"
                android:layout_width="match_parent"
                android:layout_height="@dimen/default_menu_height"
                android:gravity="center"
                android:text="@string/current_location"
                android:textSize="@dimen/default_menu_text" />

            <TextView
                android:id="@+id/menu_default"
                android:layout_width="match_parent"
                android:layout_height="@dimen/default_menu_height"
                android:gravity="center"
                android:text="@string/default_city"
                android:textSize="@dimen/default_menu_text" />



                <TextView
                    android:id="@+id/city1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/default_menu_height"
                    android:gravity="center"
                    android:text="test1"
                    android:textSize="@dimen/default_menu_text"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/city2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/default_menu_height"
                    android:gravity="center"
                    android:text="test2"
                    android:textSize="@dimen/default_menu_text"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/city3"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/default_menu_height"
                    android:gravity="center"
                    android:text="test3"
                    android:textSize="@dimen/default_menu_text"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/city4"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/default_menu_height"
                    android:gravity="center"
                    android:text="test4"
                    android:textSize="@dimen/default_menu_text"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/city5"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/default_menu_height"
                    android:gravity="center"
                    android:text="test5"
                    android:textSize="@dimen/default_menu_text"
                    android:visibility="gone"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="bottom">

                    <TextView
                        android:id="@+id/city_add"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/default_menu_height"
                        android:gravity="center"
                        android:text="@string/add_city"
                        android:textSize="@dimen/default_menu_text"
                        android:background="#878787"
                        android:layout_weight="1"/>


                <TextView
                    android:id="@+id/menu_settings"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/default_menu_height"
                    android:gravity="center"
                    android:text="@string/settings_title"
                    android:textSize="@dimen/default_menu_text"
                    android:background="#515151"/>
            </LinearLayout>

    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>


